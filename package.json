    "test": "nyc --reporter=text ava test/**.js --verbose"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "isutf8": "^2.0.2",
    "planckmatch": "^0.2.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "codecov": "^3.1.0",
    "debug": "^4.1.0",
    "eslint": "^5.7.0",
    "nyc": "^13.1.0"
  }
}
