{
  "private": true,
  "name": "@hoast/workspace",
  "description": "A set of simple and modular packages for build automation.",
  "workspaces": [
    ".docs/",
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "docs:build": "yarn workspace @hoast/docs run build",
    "docs:develop": "yarn workspace @hoast/docs run develop",
    "help": "hoast h",
    "lint": "yarn workspaces run lint",
    "version": "hoast v"
  },
  "devDependencies": {
    "eslint": "8.30.x",
    "eslint-config-standard": "17.0.x",
    "eslint-plugin-import": "2.26.x",
    "eslint-plugin-n": "15.6.x",
    "eslint-plugin-node": "11.1.x",
    "eslint-plugin-promise": "6.1.x"
  },
  "dependencies": {}
}
